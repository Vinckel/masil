<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="17.5dp"
    android:paddingLeft="17.5dp"

    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27.5dp"
        android:id="@+id/body"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:text="신체 정보"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/box1"
        android:layout_below="@id/body"
        android:id="@+id/body_view"
        android:paddingLeft="25dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_marginTop="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:id="@+id/height"
            android:textSize="17sp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentTop="true"
            android:text="키"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:layout_below="@+id/height"
            android:id="@+id/weight"
            android:textSize="17sp"
            android:text="몸무게"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@id/height"
            android:layout_marginRight="30.25dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:textSize="17sp"
            android:inputType="number"
            android:background="#FFFFFF"
            android:id="@+id/editheight" />
        <EditText
            android:layout_width="100dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@id/weight"
            android:layout_marginRight="30.25dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:textSize="17sp"
            android:inputType="number"
            android:background="#FFFFFF"
            android:id="@+id/editweight" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body_view"
        android:layout_marginTop="32dp"
        android:id="@+id/level"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:text="산책로 선호 난이도"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49.59dp"
        android:background="@drawable/box2"
        android:layout_below="@id/level"
        android:id="@+id/level_view"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingLeft="25dp"
        android:layout_marginTop="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:id="@+id/favor"
            android:textSize="17sp"
            android:layout_alignParentLeft="true"
            android:text="산책로 선호 난이도"/>

        <Spinner
            android:layout_width="92dp"
            android:layout_height="21.5dp"
            android:dropDownVerticalOffset="21.5dp"
            android:popupBackground="@null"
            android:layout_alignBottom="@id/favor"
            android:layout_marginRight="30.25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_small_drop"
            android:id="@+id/favorspin" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/level_view"
        android:layout_marginTop="32dp"
        android:id="@+id/music"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:text="선호 음악"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="179.75dp"
        android:background="@drawable/box3"
        android:layout_below="@id/music"
        android:id="@+id/music_view"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingLeft="25dp"
        android:layout_marginTop="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:id="@+id/happy"
            android:textSize="17sp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dp"
            android:text="기쁠 때"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:id="@+id/calm"
            android:textSize="17sp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/happy"
            android:layout_marginBottom="8dp"
            android:text="평온할 때"/>

        <Spinner
            android:layout_width="92dp"
            android:layout_height="21.5dp"
            android:layout_alignBottom="@id/calm"
            android:layout_marginRight="30.25dp"
            android:layout_alignParentRight="true"
            android:dropDownVerticalOffset="21.5dp"
            android:popupBackground="@null"
            android:background="@drawable/btn_small_drop"
            android:id="@+id/calmspin" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:id="@+id/bored"
            android:textSize="17sp"
            android:layout_below="@id/calm"
            android:layout_marginBottom="8dp"
            android:text="무료할 때"/>

        <Spinner
            android:layout_width="92dp"
            android:layout_height="21.5dp"
            android:layout_alignBottom="@id/bored"
            android:layout_marginRight="30.25dp"
            android:layout_alignParentRight="true"
            android:dropDownVerticalOffset="21.5dp"
            android:popupBackground="@null"
            android:background="@drawable/btn_small_drop"
            android:id="@+id/boredspin" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:id="@+id/sad"
            android:textSize="17sp"
            android:layout_below="@id/bored"
            android:layout_marginBottom="8dp"
            android:text="우울할 때"/>

        <Spinner
            android:layout_width="92dp"
            android:layout_height="21.5dp"
            android:layout_alignBottom="@id/sad"
            android:layout_marginRight="30.25dp"
            android:layout_alignParentRight="true"
            android:dropDownVerticalOffset="21.5dp"
            android:popupBackground="@null"
            android:background="@drawable/btn_small_drop"
            android:id="@+id/sadspin" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:id="@+id/angry"
            android:textSize="17sp"
            android:layout_below="@id/sad"
            android:layout_marginBottom="8dp"
            android:text="짜증날 때"/>

        <Spinner
            android:layout_width="92dp"
            android:layout_height="21.5dp"
            android:layout_marginRight="30.25dp"
            android:background="@drawable/btn_small_drop"
            android:id="@+id/happyspin"
            android:dropDownVerticalOffset="21.5dp"
            android:popupBackground="@null"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/calmspin"
           />

        <Spinner
            android:layout_width="92dp"
            android:layout_height="21.5dp"
            android:layout_marginRight="30.25dp"
            android:dropDownVerticalOffset="21.5dp"
            android:popupBackground="@null"
            android:background="@drawable/btn_small_drop"
            android:id="@+id/angryspin"
            android:layout_alignBottom="@+id/angry"
            android:layout_alignStart="@+id/sadspin" />

    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_below="@id/music_view"

    android:paddingBottom="24.39dp">
    
    <Button
        android:layout_width="156.5dp"
        android:layout_height="41.5dp"
        android:id="@+id/btn_submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_submit"
        />
</RelativeLayout>


</RelativeLayout>