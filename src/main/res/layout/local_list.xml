<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45.6dp"
        android:id="@+id/txtview1"
        android:orientation="vertical"
        android:background="#efefef"
        android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원하시는 지역을 선택해 주세요. (최대 5개)"
        android:textSize="17sp"
        android:textColor="#6b6b6b"
        android:layout_centerHorizontal="true"/>
    </LinearLayout>

    <ListView
        android:layout_below="@id/txtview1"
        android:layout_width="match_parent"
        android:layout_height="453.5dp"
        android:id="@+id/local_listview"
        android:divider="#dddddd"
        android:dividerHeight="1.6dp"></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="87.5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bgbottom">

        <Button
            android:layout_width="133.25dp"
            android:layout_height="41dp"
            android:layout_centerInParent="true"
            android:id="@+id/btn_local_next"
            android:background="@drawable/confirm_1"
            />
    </RelativeLayout>

</RelativeLayout>
