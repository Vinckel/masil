<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="251.5dp"
    android:layout_height="235dp"
    android:background="@drawable/twopop"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="188.5dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="그럼\n마실마실이 추천해주는\n감성 맞춤 음악을\n들어보세요!"
        android:textColor="#727272"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="17sp"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="127.45dp"
        android:layout_height="38.88dp"
        android:layout_marginTop="29dp"
        android:textColor="#45bece"
        android:id="@+id/btn_music"
        android:background="@drawable/listen"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_marginTop="7dp"
        android:layout_width="123.55dp"
        android:layout_height="37.56dp"
        android:textColor="#ffffff"
        android:background="@drawable/musiclater"
        android:id="@+id/btn_notmusic"
        android:layout_gravity="center_horizontal" />
</LinearLayout>