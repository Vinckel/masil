<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:orientation="vertical"
    android:id="@+id/road_list_item_rating"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        >

        <ImageView
            android:layout_width="70.5dp"
            android:layout_height="27.165dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15.5dp"
            android:src="@drawable/btn_trans"
            android:id="@+id/bookmark2"/>

        <RatingBar
            android:id="@+id/road_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:stepSize="0.5"
            android:scaleX="0.6"
            android:scaleY="0.6"
            style="@style/starRatingBar"
            android:max="5"
            android:layout_marginTop="48dp"

            />

        <TextView
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:id="@+id/road_bar"
            android:textSize="17sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="110dp"
            android:layout_alignBottom="@id/road_rating"
            android:layout_marginLeft="15dp"

            />


        <TextView
            android:text="LOCA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:id="@+id/road_loca"
            android:textSize="17sp"
            android:layout_alignBottom="@+id/road_rating"
            android:layout_toStartOf="@+id/road_bar"

            />


        <ImageView
            android:layout_width="15dp"
            android:layout_height="19dp"
            android:layout_marginRight="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/marker"
            android:id="@+id/marker"
            android:layout_alignBottom="@+id/road_rating"
            android:layout_toStartOf="@+id/road_loca"
            />

        <TextView
            android:text="WOWOWOWOWOWOW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:textColor="#727272"
            android:id="@+id/road_name" />





        <ImageView
            android:layout_width="144dp"
            android:layout_height="104dp"
            android:src="@drawable/photo"
            android:id="@+id/road_img"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</LinearLayout>