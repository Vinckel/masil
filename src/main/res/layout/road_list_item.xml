<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:orientation="vertical"
    android:id="@+id/road_list_item"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        >
        <ImageView
            android:layout_width="19.35dp"
            android:layout_height="18.04dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15.5dp"
            android:src="@drawable/graystar"
            android:id="@+id/bookmark1"
            android:tag="off"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/road_distance"
            android:text="00.00km"
            android:textSize="17sp"
            android:textColor="#AAAAAA"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="48dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:id="@+id/road_bar"
            android:textSize="17sp"
            android:layout_toStartOf="@+id/road_distance"
            android:layout_alignBottom="@id/road_distance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            />


        <TextView
            android:text="LOCA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:id="@+id/road_loca"
            android:textSize="17sp"
            android:layout_alignBottom="@+id/road_distance"
            android:layout_toStartOf="@+id/road_bar"

            />


        <ImageView
            android:layout_width="15dp"
            android:layout_height="19dp"
            android:layout_marginRight="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/marker"
            android:id="@+id/marker"
            android:layout_toStartOf="@+id/road_loca"
            android:layout_alignBottom="@id/road_distance" />

        <TextView
            android:text="WOWOWOWOWOWOW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:textColor="#727272"
            android:id="@+id/road_name" />



        <ImageView
            android:layout_width="144dp"
            android:layout_height="104dp"
            android:src="@drawable/photo"
            android:id="@+id/road_img"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />



    </RelativeLayout>
</LinearLayout>