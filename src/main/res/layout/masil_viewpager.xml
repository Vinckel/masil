<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewpager">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/viewpager_bottom"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="87.5dp"
        android:background="#45BECE">
        <Button
            android:layout_width="182.5dp"
            android:layout_height="41.6dp"
            android:layout_gravity="center"
            android:background="@drawable/choose"
            android:id="@+id/btn_pager_start"/>
    </LinearLayout>
    <LinearLayout
        android:layout_above="@id/viewpager_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ededed"
        android:id="@+id/page_mark"
        android:gravity="center"
        android:orientation="horizontal"></LinearLayout>


</RelativeLayout>