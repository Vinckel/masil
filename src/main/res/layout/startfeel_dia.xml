<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/startfeel_dia"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:layout_width="235dp"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:layout_width="251.5dp"
        android:layout_height="235dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:background="@drawable/twopop"
        >


    <TextView
        android:layout_width="188.75dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="27dp"
        android:text="산책을 시작하기 전,\n지금 내 기분은 어때요?"
        android:textColor="#727272"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv"
        android:layout_alignParentTop="true"
        />

    <Spinner
        android:layout_below="@id/tv"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_dropdown"
        android:layout_width="129dp"
        android:layout_height="22.5dp"
        android:paddingLeft="40dp"
        android:id="@+id/feelingspinner"
        android:layout_gravity="center_horizontal" />


    <Button
        android:layout_marginBottom="14.5dp"
        android:layout_width="123.5dp"
        android:layout_height="37.5dp"
        android:background="@drawable/prev"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_pre"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"/>


    <Button
        android:layout_width="127.45dp"
        android:layout_height="38.9dp"
        android:textColor="#45bece"
        android:background="@drawable/next"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8.25dp"
        android:id="@+id/btn_next"
        android:layout_above="@id/btn_pre"
        android:layout_gravity="center_horizontal" />
    </RelativeLayout>
</LinearLayout>