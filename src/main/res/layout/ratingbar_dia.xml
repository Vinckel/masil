<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="251.5dp"
    android:layout_height="235dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:background="@drawable/dropdown">


    <TextView
        android:layout_width="188.75dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="39.25dp"
        android:textColor="#727272"
        android:textSize="17sp"
        android:text="산책로에\n별점을 매겨주세요!"
        android:id="@+id/textView12"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:layout_marginTop="22.5dp"
        android:background="@drawable/btn_dropdown"
        android:layout_width="129dp"
        android:paddingLeft="40dp"
        android:layout_height="22.5dp"
        android:id="@+id/starspinner"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="127.5dp"
        android:layout_height="39dp"
        android:layout_marginTop="50.2dp"
        android:background="@drawable/next"
        android:id="@+id/btn_rating_next"
        android:layout_gravity="center_horizontal" />
</LinearLayout>