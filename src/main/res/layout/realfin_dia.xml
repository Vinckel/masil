<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="251.5dp"
    android:layout_height="235dp"
    android:background="@drawable/twopop"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:layout_width="188.75dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="산책 종료 지점에\n도착했어요.\n산책을 마치시겠어요?"
        android:textColor="#727272"
        android:textSize="17sp"
        android:id="@+id/Popfintext"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="127.4dp"
        android:layout_height="38.8dp"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_finish_no"
        android:background="@drawable/btn_continue"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="123.54dp"
        android:layout_height="37.56dp"
        android:background="@drawable/fin"
        android:layout_marginTop="6dp"
        android:id="@+id/btn_finish_yes"
        android:layout_gravity="center_horizontal" />
</LinearLayout>